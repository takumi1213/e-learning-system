<div class="row text-center">
    <div class="col-12">
        <div class="row">
            <div class="col-6">
                <%= form_for(@word) do |f| %>
                    <p>Word</p>
                    <%= f.text_field :word, class: "form-control", placeholder: "word" %>
                    <%= f.hidden_field :category_id ,value: params[:id] %>
            </div>
            <div class="col-6">
                <p>Choice</p>
                <%= f.fields_for :choices do |s| %>
                <div class="low mb-4">
                    <div class="row">
                        <div class="col-8">
                            <%= s.text_field :choice, class: "form-control", placeholder: "choice" %>
                        </div>
                        <div class="col-4 form-gorup">
                            <%= label_tag :correct %>
                            <%= s.check_box :correct, class: "form-control" %>                        
                        </div>
                    </div>                   
                </div>
                <% end %>
            </div>
        </div>
        <div class="row">
                <div class="col-12">
                    <%= f.submit btn_msg, class: "btn btn-block btn-primary col-12"%>
                </div>
            <% end %>
        </div>
    </div>
</div>
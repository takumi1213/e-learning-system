<%= provide(:title,"Manege Words")%>
<div class="row">
    <div class="col-12">
        <div class="container my-3">
            <h1 class="texr-center">Manege Words</h1>
            <%= link_to 'Add Words', new_category_word_path(), class:"btn btn-success" %>
            <%= will_paginate %>
              <table class="table table-striped table-hover">
                  <thead class="text-center">
                      <tr>
                          <th>Title</th>
                          <th>Answer</th>
                          <th colspan="2">Action</th>
                      </tr>
                  </thead>
                    <tbody class="text-center">
                        <% @words.each do |word| %>
                            <tr>
                                <td> <%= word.word %> </td>
                                <td> <% for choice in word.choices %>
                                    <%= choice.choice if choice.correct %>  
                                <% end %> </td>
                                <td> <i class="fas fa-edit"></i> <%= link_to "Edit", edit_category_word_path(params[:category_id],word.id) %> </td>
                                <td> <i class="fas fa-trash-alt"></i> <%= link_to "Delete", category_word_path(params[:category_id],word.id),method: :delete,data: { confirm: "Are you sure?" }%> <i class="fas fa-poo fa-rotate-90"></i></td>
                            </tr>
                        <% end %>
                    </tbody>
              </table>
            <%= will_paginate %>
        </div>
    </div>
</div>
